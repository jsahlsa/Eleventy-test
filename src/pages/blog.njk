<h3>Posts:</h3>

<ul class="blog posts">
{% for post in collections.blog | reverse %}
<a href="{{ post.url }}" class="blog post">
<li>
<h4 class="post-title">{{ post.data.title }}</h4> 
<div class="date-tag-container">
<p class='blog-list dates'>{{ post.date | postDate }}<p>
<ul class="blog-tags">
{% set tags = post.data.tags | exclude('blog') %}
{% for tag in tags %}
<li>
{{ tag | lower }}
</li>
{% endfor %}
</ul>
</div>
<p class="post-description">{{ post.data.description }}</p>
</li>
</a>
{% endfor %}
</ul>

